srcdir = @srcdir@
VPATH = $(srcdir)

subdirs = lib doc etc src

all install uninstall clean realclean mostlyclean:
	@for f in $(subdirs); do \
		(cd $$f && $(MAKE) $@); \
	done

distclean:
	@for f in $(subdirs); do \
		(cd $$f && $(MAKE) $@); \
	done
	-rm -f Makefile config.status config.log config.h
	-rm -rf autom4te.cache
