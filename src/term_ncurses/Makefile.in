srcdir = @srcdir@
VPATH = $(srcdir)

prefix = @prefix@
exec_prefix = @exec_prefix@

bindir = @bindir@
etcdir = $(prefix)/share/zile
mandir = @mandir@/man1

INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@
INSTALL = @INSTALL@

CC = @CC@
CFLAGS = -I.. -I../../lib -W @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = ../../lib/libzile.a @LIBS@
RANLIB = @RANLIB@

LIB = libterm_ncurses.a

SRCS =	$(srcdir)/term_ncurses.c	\
	$(srcdir)/ncurses_key.c		\
	$(srcdir)/ncurses_minibuf.c	\
	$(srcdir)/ncurses_misc.c	\
	$(srcdir)/ncurses_redisplay.c

OBJS =	term_ncurses.o			\
	ncurses_key.o			\
	ncurses_minibuf.o		\
	ncurses_misc.o			\
	ncurses_redisplay.o

.c.o:
	$(CC) -c -I. -I$(srcdir) -I$(srcdir)/.. $(CFLAGS) $<

all: $(LIB)

$(LIB): $(OBJS)
	rm -f $(LIB)
	ar rc $(LIB) $(OBJS)
	$(RANLIB) $(LIB)

.PHONY: install uninstall clean realclean distclean mostlyclean

install:

uninstall:

clean: 
	-rm -f $(LIB) *.o

distclean: clean 
	-rm -f Makefile

realclean: distclean

mostlyclean: clean

$(OBJS): $(srcdir)/../zile.h $(srcdir)/../extern.h ../config.h term_ncurses.h
