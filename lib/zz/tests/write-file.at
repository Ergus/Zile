AT_BANNER([Zz File Handling.])



## ------------- ##
## Basic output. ##
## ------------- ##


AT_SETUP([write buffer contents to file])

AT_DATA([script.zl], [[
(switch-to-buffer "*tmp*")
(insert "Hello, World!
")
(write-file "hello.txt")
]])

AT_DATA([expout],
[[Wrote hello.txt
]])

AT_DATA([expfile],
[[Hello, World!
]])

AT_CHECK([$ZZ --batch -l script.zl], 0, [expout])
AT_CHECK([diff hello.txt expfile], 0, [])

AT_CLEANUP
